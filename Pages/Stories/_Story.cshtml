@model StoryItemModel
@{
    if (Model.ActorColor == null)
    {
        Model.ActorColor = "primary";
    }

}
@if (Model.AfterEditing)
{
<div class="alert alert-@Model.ActorColor story-view" role="alert">
    <div class="context text-right">
        <div class="story-number">
            <strong>N° @Model.Order:</strong>
        </div>
        <div>
            <i>@Model.Context</i>
        </div>
    </div>
    En tant que <strong><i>@Model.Actor</i></strong>,
    <br />
    je veux pouvoir <i>@Model.What</i> afin <i>@Model.Why</i>

    <div class="story-btns text-right">
        <a href="#" class="edit-mode-story" data-target="#story-view-@Model.Id" data-id="@Model.Id">Modifier</a> |
        <a href="#" class="clone-story" data-id="@Model.Id">Cloner</a> |
        <a href="#" class="delete-story" data-id="@Model.Id" data-target="#story-view-@Model.Id">Supprimer</a>
    </div>
</div>
}
else
{
    <div class="col-sm-12 col-md-4" id="story-view-@Model.Id">
        <div class="alert alert-@Model.ActorColor story-view" role="alert">
            <div class="context">
                <div class="story-number text-left">
                    <strong>N° @Model.Order:</strong>
                </div>
                <div class="text-right">
                    <i>@Model.Context</i>
                </div>
            </div> 
            En tant que <strong><i>@Model.Actor</i></strong>,
            <br />
            je veux pouvoir <i>@Model.What</i> afin <i>@Model.Why</i>

            <div class="story-btns text-right">
                <a href="#" class="edit-mode-story" data-target="#story-view-@Model.Id" data-id="@Model.Id">Modifier</a> |
                <a href="#" class="clone-story" data-id="@Model.Id">Cloner</a> |
                <a href="#" class="delete-story" data-id="@Model.Id" data-target="#story-view-@Model.Id">Supprimer</a>
            </div>
        </div>
    </div>
}


