@model StoryFilterModel
<form asp-action="Index" asp-controller="Stories" method="get">
    <div class="form-inline mb-2">
        <div class="form-group mr-1">
            <select asp-items="@Model.Contexts" asp-for="ContextId" class="form-control">
                <option value="">--Context--</option>
            </select>
        </div>
        <div class="form-group mr-1">
            <select asp-items="@Model.Actors" asp-for="ActorId" class="form-control">
                <option value="">--Acteur--</option>
            </select>
        </div>
        <div class="form-group mr-1">
            <input asp-for="Word" class="form-control" placeholder="Mot clé" />
        </div>
        <input type="submit" value="Afficher les récits" class="btn btn-outline-primary" />
    </div>
</form>